<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_logo_height"
        android:layout_gravity="center"
        android:background="#e6e6e6"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="20dp"
            android:text="@string/cust_model_title"
            android:textSize="20sp"></TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/custmodel_flush"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="100dp"
            android:onClick="onRemoteClick"
            android:layout_height="100dp"
            android:background="@drawable/cust_result_icon_bg"
            android:scaleType="centerInside"
            android:textAlignment="center"
            android:src="@mipmap/img_remote"></ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/cust_model_download"
            android:layout_height="50dp"></TextView>

    </LinearLayout>

</LinearLayout>